<?xml version="1.0" encoding="UTF-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="2"
    android:background="#2FFF00">
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longDate"
        android:text="Środa 29.11.2154"
        android:layout_row="0"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#177302" />
    
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1">
        
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/weatherView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_column="0"
            android:src="@drawable/clear_sky_day"
            android:background="#36E7FF" />
        
        <TextView 
	        android:layout_width="wrap_content" android:layout_height="match_parent"
	        android:id="@+id/longTemp"
	        android:text="17°C"
	        android:layout_column="1"
	        android:textSize="20sp"
	        android:background="#0791A3"
	        android:layout_gravity="center_vertical" />
        
        <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:rowCount="2" android:columnCount="1" android:layout_gravity="center" android:layout_column="2" android:background="#FF990A">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Opady" android:layout_row="0" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                android:text="3mm" android:layout_row="1" android:id="@+id/longRain"/>
        </GridLayout>
        
        <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:rowCount="2" android:columnCount="1" android:layout_gravity="center" android:layout_column="3" android:background="#FF990A">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Chmury" android:layout_row="0" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                android:text="60%" android:layout_row="1" android:id="@+id/longCloudPercentage"/>
        </GridLayout>
        
        <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:rowCount="2" android:columnCount="1" android:layout_gravity="center" android:layout_column="4" android:background="#FF990A">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Śnieg" android:layout_row="0" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                android:text="0mm" android:layout_row="1" android:id="@+id/longSnow"/>
        </GridLayout>
            
	</GridLayout>  
</GridLayout>